#cloud-config
autoinstall:
    version: 1
    early-commands:
        # workaround to stop ssh for packer as it thinks it timed out
        - sudo systemctl stop ssh
    locale: en_US
    keyboard:
        layout: en
        variant: us
    packages: [
      open-vm-tools,
      openssh-server,
      net-tools
    ]
    network:
        network:
            version: 2
            ethernets:
                ens192:
                    dhcp4: true
    identity:
        hostname: jeffs-virtualbox-image-ubuntu-2204-for-virtualbox-server
        username: ubuntu
        password: "ubuntu"
    ssh:
        install-server: yes
        allow-pw: yes
        authorized-keys:
            - ssh-rsa ADD_YOUR_KEY
    storage:
        layout:
            name: lvm
    user-data:
        disable_root: false
    late-commands:
        - echo 'ubuntu ALL=(ALL) NOPASSWD:ALL' > /target/etc/sudoers.d/ubuntu
        - curtin in-target --target=/target -- chmod 440 /etc/sudoers.d/ubuntu
